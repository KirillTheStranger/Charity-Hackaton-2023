:root {
  --cell-size-3x3: calc((var(--field-size) / 3));
  --cell-size-4x4: calc((var(--field-size) / 4));
  --cell-size-5x5: calc((var(--field-size) / 5));
  --cell-size-k: 1;
  --field-size: 480px;

  --color-back: #4C4848;
  --color-front: #EAEAEA;
  --color-accent: #D837B5;
  --color-accent-highlight: #da58be;
  
}

body {
  font-family: 'Inter', sans-serif;
  font-style: normal;
  font-size: 36px;

  background-color: white;
}

p {
  line-height: 3.5rem;
}



.hero {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 5%;
}

.main-field {
  display: flex;
  width: 1440px;
  height: 716px;
  justify-content: space-around;
  align-items: center;

}

.text-block-wrapper {
  height: 100%;
}

.text-block {
  display: flex;
  width: 700px;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;

}

.text-title {
  font-size: 66px;
  line-height: 1.2em;
}


.text-choose-field {
  margin-top: 200px;
}



.order-info {
  order: 2;
}

